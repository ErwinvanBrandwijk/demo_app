<h1>User details</h1>
<%= gravatar_for @user %>
<p><label>Name: </label><%= @user.name %></p>
<p><label>Email: </label><%= @user.email %></p>
<p><label>Microposts: </label><%= @user.microposts.count %></p>
<small>Created: <%= @user.created_at %> | Updated: <%= @user.updated_at %></small>

<div id="microposts">
  <% unless @user.microposts.empty? %>
  <table class="microposts" summary="User microposts">
    <%= render @microposts %>
  </table>
  <%= will_paginate @microposts %>
  <% end %>
</div>